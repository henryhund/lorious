<h1>Braintree Credit Card Transaction Form</h1>

<%= simple_form_for :merchant,
	     #:params => @result && @result.params[:transaction],
	     #:errors => @result && @result.errors.for(:transaction),
	     #:builder => ApplicationHelper::BraintreeFormBuilder,
	     :url => new_merchant_path,
	     :html => {:autocomplete => "off", :id => 'braintree-merchant-form', :class => 'form-horizontal'} do |f| -%>
	     

	
      <div><%= f.input :number, :input_html => { 'data-encrypted-name' => :number, :value => "121181976" } %></div>
      <div><%= f.input :account, :input_html => { 'data-encrypted-name' => :account, :value => "43759348798" } %></div>
      <div><%= f.input :cvv, :input_html => { 'data-encrypted-name' => :cvv } %></div>
	
  <%= f.submit "Click here to create merchant account" %>
<% end -%>

<script src="https://js.braintreegateway.com/v1/braintree.js"></script>
<script>
  var braintree = Braintree.create("");
  braintree.onSubmitEncryptForm('braintree-merchant-form');
</script>

