.form-group.row{:style => "margin-top: 50px;"}
  = hidden_field_tag :current_step_index, 1
  = f.hidden_field :step_2_complete, value: true
  = f.label :bio, class: "col-xs-2 control-label"
  .col-xs-10
    = f.text_area :bio, class: "form-control", placeholder: "Bio", validate: true
.form-group.row
  = f.label :job, label: "Job Title", class: "col-xs-2 control-label"
  .col-xs-10
    = f.text_field :job, class: "form-control", placeholder: "Job Title", validate: true
.form-group.row
  .col-lg-offset-2.col-lg-10
    = f.submit "Complete Registration", class: "btn btn-default"
    = f.submit "Apply to be an Expert", class: "btn btn-primary", name: "apply_to_be_an_expert"
