<%= form_for @availability, url: "/experts/availabilities/#{@availability.id}", role: "form", validate: true do |f| %>
  
  <div class="form-group row">
    <%= f.label :hourly_cost, class: "col-xs-2 control-label" %>
    <div class="col-xs-10">
      <%= f.text_field :hourly_cost, class: "form-control", placeholder: "Hourly Rate" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :time_zone, class: "col-xs-2 control-label" %>
    <div class="col-xs-10">
      <%= f.time_zone_select :time_zone, nil, class: "form-control" %>
    </div>
  </div>

  <div id="edit_calendar">
    <%= render "shared/availability_calendar" %>
  </div>

  <%= f.hidden_field :timespans %>

  <div class="form-group row">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Save", class: "btn btn-default" %>
    </div>
  </div>

<% end %>
